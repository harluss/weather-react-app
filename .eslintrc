{
	"extends": ["airbnb", "prettier", "prettier/react"],
	"env": {
		"browser": true,
		"es6": true,
		"jest": true
	},
	"globals": {
		"document": true
	},
	"plugins": ["import", "jsx-a11y", "prettier", "react", "react-hooks"],
	"rules": {
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js"]
			}
		]
	},
	"settings": {
		"import/resolver": {
			"node": {
				"paths": ["src"]
			}
		}
	}
}
